<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>السعيد في اللغة العربية</title>
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/lecture-style.css" />
    <style>
        body {
            height: 100vh;
        }

        iframe {
            width: 100%;
            height: 400px;
        }

        #timer {
            position: fixed;
            top: 0.6%;
            left: 2%;
            color: blue;
            font-size: 1.9rem;
            direction: ltr;
        }
    </style>
</head>

<body>

    <h4 id="timer"></h4>
    <div class="container">
        <div class="title text-right blue mt-5">
            <h3 id="title">
                <%= videos[0].title %>
            </h3>
        </div>
        <div class="row mt-5">
            <div class="col-md-9 col-sm-12">
                <iframe src=<%=videos[0].url %> frameborder="0" allow="autoplay; fullscreen"
                    allowfullscreen></iframe>
            </div>
            <div class="col-md-3 row mt-4">
                <% for(var video of videos) { %>

                    <div class="col-6 col-md-12 exam w-100 text-center py-2">
                        <button class="btn<%= videos.indexOf(video) %>">
                            <%= video.title %>
                        </button>
                    </div>
                    <% } %>
                    <% for(var file of files) { %>

                        <div class="col-6 col-md-12 exam w-100 text-center py-2">
                            <a href="<%= file.url %> "><button class="btn<%= videos.indexOf(file) %>">
                                <%= file.title %>
                            </button></a>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>

    <script src="/javascripts/jquery-3.5.1.min.js"></script>
    <script src="/javascripts/index.js"></script>
    <script>


        var difference = '<%= remainingTime %>';
        function countdownTimer() {
            let remaining = "Time's up!";

            if (difference > 0) {
                const parts = {
                    d: Math.floor(difference / (1000 * 60 * 60 * 24)),
                    h: Math.floor((difference / (1000 * 60 * 60)) % 24),
                    m: Math.floor((difference / 1000 / 60) % 60),
                    s: Math.floor((difference / 1000) % 60),
                };
                remaining = Object.keys(parts).map(part => {
                    return `${parts[part]} ${part}`;
                }).join(" ");
            }


            if (difference <= 0) {
                console.log(window.location.href);
                // alert("انتهى الوقت")
                // clearInterval(x);
                document.getElementById("timer").innerHTML = "EXPIRED";
                window.location.replace("/lectures/year9/انتهى الوقت");
            }

            document.getElementById("timer").innerHTML = remaining;
            difference -= 1000;
        }

        setInterval(countdownTimer, 1000);



        //Videos
        $("button").click((e) => {
            $("#title").html(e.target.innerHTML);

            <% for (var video of videos) { %>

            if (e.target.classList.value == "btn<%= videos.indexOf(video) %>") {
                    $("iframe").attr("src", '<%= video.url %>');
                }
            <% } %>
        });
    </script>
</body>

</html>